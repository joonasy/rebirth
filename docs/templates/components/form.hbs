<div class="Container docs-Container">
  <div class="Wrap">

      <!--
       Default separated Form with grid
       -->
      <form action="" class="Form Form--default js-Form">
        <div class="Grid">
          <div class="Grid-cell s-Width--6of12">
            <input class="Form-item -round" type="text" placeholder="I'm placeholder text">
          </div>
          <div class="Grid-cell s-Width--6of12">
            <div class="Form-cell">
              <input class="Form-item -round" type="password" placeholder="I'm placeholder text">
              <div class="Form-addon -round"><i class="ion-key"></i></div>
            </div>
          </div>
          <div class="Grid-cell s-Width--6of12">
            <div class="Form-item Form-item--select -icon">
              <div class="Form-icon"><i class="ion-ios-cloud"></i></div>
              <select>
                <option value="Option 1">Choose something here</option>
                <option value="Option 1">Option 1</option>
                <option value="Option 2">Option 2</option>
                <option value="Option 3">Option 3</option>
                <option value="Option 4">Option 4</option>
              </select>
              <span class="Form-icon"><i class="IconCss -chevronDown -s"></i></span>
            </div>
          </div>
          <div class="Grid-cell s-Width--6of12">
            <div class="Form-cell">
              <input class="Form-item -round" type="text" placeholder="Search something...">
              <button class="Form-button Button Button--primary -round">Search</button>
            </div>
          </div>
        </div>
      </form>
